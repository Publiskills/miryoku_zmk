
#define COMBO(NAME, LAYERS, BINDINGS, KEYPOS) \
/ { \
  combos { \
    compatible = "zmk,combos"; \
    combo_##NAME { \
      timeout-ms = <50>; \
      bindings = <BINDINGS>; \
      key-positions = <KEYPOS>; \
      layers = <LAYERS>; \
    }; \
  }; \
};

